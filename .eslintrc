{
  "parser": "babel-eslint",
  "extends": [
    "xo-space/esnext",
    "xo-space/browser",
    "xo-react",
    "prettier",
    "prettier/flowtype",
    "prettier/react"
  ],
  "plugins": [
    "import",
    "jest",
    "prettier"
  ],
  "globals": {
    "module": true,
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "parser": "flow",
        "printWidth": 120,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "all",
        "useTabs": false
      }
    ]
  }
}
